# Win In Store - Azure Configuration
# Copy this file to .env.local and fill in your Azure credentials

# Azure SQL Database
AZURE_SQL_CONNECTION_STRING=Server=tcp:redpulse.database.windows.net,1433;Database=redpulse;User Id=redpulseadmin;Password=YOUR_PASSWORD;Encrypt=true;TrustServerCertificate=false;Connection Timeout=30;

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://YOUR_RESOURCE.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_GPT5=gpt-5
AZURE_OPENAI_DEPLOYMENT_TRANSCRIBE=gpt-4o-transcribe
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# Application
APP_SHARED_PASSCODE=change-me-to-something-secure
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Vercel Analytics (if using Vercel)
# VERCEL_ANALYTICS_ID=

