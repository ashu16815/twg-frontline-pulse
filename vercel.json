{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "git": {
    "deploymentEnabled": {
      "production": true,
      "preview": true
    }
  },
  "crons": [
    { "path": "/api/exec/worker/run", "schedule": "0 9 * * *" }
  ]
}
